@using Eyect4RailsWebApp.Models
@model List<Eyect4RailsWebApp.Models.Sector>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model[0].TrackId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].TramId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Available)
        </th>
        <th>
            @Html.DisplayNameFor(model => model[0].Blocked)
        </th>
        <th></th>
    </tr>

@foreach (Sector item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TrackId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TramId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Number)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Available)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Blocked)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

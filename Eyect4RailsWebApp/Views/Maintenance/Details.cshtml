@model eyect4rails.Classes.Maintenance

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Maintenance</h4>
    <hr />
    <dl class="dl-horizontal">

        <dt>
            Assigned to
        </dt>

        <dd>
            @Model.Employee.Name @Model.Employee.Surname
            @*TODO: implement @Html.ActionLink(Model.Employee.Id.ToString(), "Details", "Employee", new { id = Model.Employee.Id }, null)*@
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Tram.Id)
        </dt>

        @if (Model.Tram != null)
            {
            <dd>
                @Html.ActionLink(Model.Tram.Id.ToString(), "Details", "Tram", new { id = Model.Id }, null)
            </dd>
        }
        else
        {
            <dd>Unassigned</dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.ScheduledDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ScheduledDate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.AvailableDate)
        </dt>

        @if (Model.AvailableDate.Year != 9999)
            {
            <dd>
                @Html.DisplayFor(modelItem => Model.AvailableDate)
            </dd>
        }
        else
        {
            <dd>n/a</dd>
        }

        <dt>
            @Html.DisplayNameFor(model => model.Completed)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Completed)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Back to List", "Index")
        </div>
    }
</div>
